{
  "name": "sichelgaita-ai-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Sichelgaita.AI - Data Wealth Platform Monorepo",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && poetry run uvicorn app.main:app --reload",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && poetry run ruff check ."
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "monorepo",
    "nextjs",
    "fastapi",
    "supabase",
    "gemini",
    "data-analytics"
  ],
  "author": "",
  "license": "MIT"
}
